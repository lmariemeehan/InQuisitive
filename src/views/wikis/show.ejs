<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <main class="container vh-100 shadow">
      <% include ../static/partials/navbar.ejs %>
      <div class="show-wiki-page">

        <div class="row">
          <div class="col text-center">
            <h1 class="text-center"> <%- wiki.title %> </h1>
            <p class="mt-5"><%- wiki.body %></p>
          </div>
        </div>

        <div class="row mt-5">
          <div class="col text-center">
            <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning rounded-pill mr-2 shadow-sm" role="button">Edit</a>

            <form style="display:initial" action="/wikis/<%= wiki.id %>/destroy" method="post">
              <button type="submit" class="btn btn-dark rounded-pill shadow-sm">Delete</button>
            </form>
        </div>
      </div>

      </div>
    </main>
    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
