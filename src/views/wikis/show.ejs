<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1><%- wiki.title %></h1>
      <h3><%- wiki.body %></h3>

      <ul class="list-group">
        <% wiki.collaborators.forEach((collaborator) => { %>
          <li class="list-group-item">
            <a href="/wikis/<% wiki.id %>/collaborators/<%= collaborator.id %>"> <%= collaborator.name%> </a>
          </li>
        <% }) %>
      </ul>

      <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning">Edit</a>
  
      <form style="display:initial" action="/wikis/<%= wiki.id %>/destroy" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>


    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
