<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>
    <main class="container">

      <h1>Edit Wiki</h1>

        <!--Edit wiki form -->
      <form action="/wikis/<%= wiki.id %>/update" method="post">

        <div class="form-group">
          <label for="title">Wiki title</label>
          <input value="<%= wiki.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>

        <div class="form-group">
          <label for="body">Body</label>
          <textarea rows="4" class="form-control" name="body" placeholder="Enter Body"><%= wiki.body %></textarea>
        </div>

      <% if(currentUser.role !== 0){ %>
        <div class="form-group">
          <label for="private">Would you like to make this wiki public or private?</label>
          <select class="form-control" name="private">
            <option value="false">Public</option>
            <option value="true">Private</option>
          </select>
        </div>

        <!--Collaborators -->
      <div class="card">
      <h5 class="card-header"> Collaborators </h5>
      <div class="card-body">
        <h5 class="card-title"> Add or remove a collaborator for: <%= wiki.title %> </h5>
        <a href="/wikis/<%= wiki.id %>/collaborators/new" class="btn btn-success">Add collaborator</a>
        <a href="/wikis/<%= wiki.id %>/collaborators/destroy"  class="btn btn-danger">Remove collaborator</a>
      </div>
      </div>

      <% } %>

        <br>

        <button type="submit" class="btn btn-primary">Update</button>
      </form>


    </main>
    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
