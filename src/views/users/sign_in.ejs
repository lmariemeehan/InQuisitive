<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

      <% include ../static/partials/navbar.ejs %>
      <% include ../static/partials/messages.ejs %>
      <div class="sign-in-page">
      <main class="container">
        
      <div class="row">
      <div class="col">
      <div class="card mx-auto w-50 border-0">

        <div class="card-header bg-white">
          <h2>Log in</h2>
        </div>

        <div class="card-body">
          <form action="/users/sign_in" method="post">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter email">
              <small class="text-muted" id="emailHelp">email address must be a valid address</small>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" aria-describedby="passwordHelp" placeholder="Enter password">
              <small class="text-muted" id="passwordHelp">password must match what is on file</small>
            </div>
            <button type="submit" class="btn btn-outline-info rounded-pill btn-lg btn-block">Log in</button>
          </form>
        </div>
      </div>
      </div>
      </div>
    </main>
    </div>
    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
