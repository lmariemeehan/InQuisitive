<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <main class="container">

      <% include ../static/partials/navbar.ejs %>
      <% include ../static/partials/messages.ejs %>

      <div class="sign-in-page">
        <div class="row">
          <div class="col">
            <div class="card mx-auto w-75 border-0 shadow rounded p-5 my-5">
              <div class="card-header bg-white">
                <h2>Log in</h2>
              </div>
              <div class="card-body">
                <form action="/users/sign_in" method="post">
                  <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="... email">
                    <small class="text-muted" id="emailHelp">email address must be a valid address</small>
                  </div>
                  <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password" aria-describedby="passwordHelp" placeholder="... password">
                    <small class="text-muted" id="passwordHelp">password must match what is on file</small>
                  </div>
                  <button type="submit" class="btn btn-outline-secondary rounded-pill btn-lg btn-block mt-5">Log in</button>
                </form>
              </div>
          </div>
        </div>
      </div>
    </div>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
