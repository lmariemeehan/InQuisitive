<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>
    <div class="sign-up-page">
    <main class="container">
    <% include ../static/partials/messages.ejs %>
      <div class="sign-up-header">
        <h2>Create account</h2>
      </div>
         <div class="row">
           <div class="col-md-8">
             <form method="POST" action="/users">
               <div class="form-group">
                 <label>Name:</label>
                 <input type="text" name="name" placeholder="Enter Name" class="form-control"/>
                 <small class="text-muted" id="nameHelp">heyy beautiful! what's your name? ;)</small>
               </div>
               <div class="form-group">
                 <label>Email:</label>
                 <input type="email" name="email" placeholder="Enter Email" class="form-control"/>
                 <small class="text-muted" id="emailHelp">email address must be a valid address</small>
               </div>
               <div class="form-group">
                 <label>Password:</label>
                 <input type="password" name="password" placeholder="Enter Password" class="form-control"/>
                 <small class="text-muted" id="passwordHelp">password must be at least 6 characters in length</small>
               </div>
               <div class="form-group">
                 <label>Password confirmation:</label>
                 <input type="password" name="password_conf" placeholder="Enter Password confirmation" class="form-control"/>
                 <small class="text-muted">must match password provided</small>
               </div><br/>
               <input type="submit" value="Sign Up" class="btn btn-primary rounded-pill"/>
             </form>
           </div>
         </div>
    </main>
  </div>
    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
